@using SimchaFundHW21.Data
@model SimchasViewModel

<div>
    <h1 class="mt-3">Contributors</h1>
</div>
<button class="btn btn-primary mt-3" id="new-simcha">New Simcha</button>

<div class="table-responsive mt-3">
    <table class="table table-bordered table-hover">
        <tr>
            <th>Contributions</th>
            <th>Simcha Name</th>
            <th>Contributor Count</th>
            <th>Total</th>
            <th>Date</th>
        </tr>

        @foreach (Simcha simcha in Model.Simchas)
        {
            <tr>
                <td>
                    <a class="btn btn-primary" href="/simchas/contributions?simchaid=@simcha.Id">Contributions</a>
                </td>
                <td>@simcha.Name</td>
                <td>@simcha.Contributions.Count / @Model.TotalContributors</td>
                <td>@simcha.TotalContributed.ToString("C")</td>
                <td>@simcha.Date.ToShortDateString()</td>
            </tr>
        }
    </table>
</div>

<div class="modal fade" tabindex="-1" role="dialog" aria-modal="true" style="padding-right: 16px; display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Simcha</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="/simchas/new">
                    <div class="form-group">
                        <label>Simcha Name</label>
                        <input class="form-control" name="name" placeholder="Simcha Name" type="text">
                    </div>
                    <div class="form-group">
                        <label>Date</label>
                        <input type="date" name="date" class="form-control" id="date">
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary" name="save">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/Simchas.js"></script>
}